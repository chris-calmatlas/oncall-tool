extends section

block content
  form(method='POST' action='')
    div.form-group
      label(for='name') Schedule Name:
      input#name.form-control(type='text' placeholder='Name' name='name' required='true' value=(undefined===schedule ? '' : schedule.name))
    div.form-group
      label Members:
      div
        for user in users
          div(style='display: inline; padding-right:10px;')
            input.checkbox-input(type='checkbox', name='user', id=user._id, value=user._id, checked=user.checked )
            label(for=user._id) #{user.name}
    button.btn.btn-primary(type='submit') Submit
  
  if errors
    ul
      for error in errors
        li!= error.msg